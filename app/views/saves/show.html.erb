<html>
<head>
	<title></title>
	<style type="text/css">
		h1{
			width:50px;
			margin-left: auto;
			margin-right:auto;
		}

		#vid_notes_tool{
			display:block;
			margin-left: auto;
			margin-right:auto;
			width:1400px;
		}
		#video_container{
			display:block;
			margin-left: auto;
			margin-right:auto;
			width:40em;
		}
		#nav h2{
			display:inline-block;
			width:500px;
		}
		#nav a{
			display: inline-block;
			width:100px;
			float:right;
		}
		#notes_flow{
			display:block;
			height:350px;
			border:1px solid #F8F8F8;
			vertical-align: top;
			margin-bottom:10px;
			margin-top:10px;
			overflow-x: scroll;
   		    overflow-y: hidden;
    		white-space:nowrap

		}
		#time_stamp1, #time_stamp2, #time_stamph{
			display:inline-block;
			width:100px;
		}
		#ts{
			display:block;
			margin-left:70px;
			margin-top:5px;
			margin-bottom:5px;
		}
		

		#new_notes{
			display:inline-block;
			vertical-align: top;
			border:1px solid #E8E8E8;
			margin-left:70px;
			margin-top:60px;
		}
		#new_notes textarea{
			width:500px;
			height:300px;
			border:1px solid #E8E8E8;
		}
		#submit_note{
			display:block;
			width:100px;
			margin-left: auto;
			margin-right:auto;
			margin-bottom:5px;
		}
		#new_notes h4{
			display:block;
			width:150px;
			margin-right:auto;
			margin-left:auto;
		}
		.note{
			height:300px;
			width:310px;
			border:1px solid #F8F8F8;
			display:inline-block;
			vertical-align: top;
			margin:5px;
			overflow-y:scroll;
			overflow-x:hidden;
			white-space:normal;
		}
		.note p{
			margin:5px;
		}
		.note_time{
			display:block;
		}
	</style>
	<script type="text/javascript">
		$(document).ready(function(){
			$("#note").submit(function(){
				$.post($(this).attr('action'),$(this).serialize(),function(data){
					if(data.success=='true')
					{
						$("#notes_flow").prepend("<div class='note'><a href='/notes/retrieve/"+data.note_id+"'>Note View</a><p class='note_time'>"+data.start_timeh+" H "+data.start_time1+" M "+data.start_time2+" S </p><a class='note_content' href='' id='v+"+data.time+"_"+data.url+"'>"+data.notes+"</a></div>");
					}
					else
					{
						alert(data.messages);
					}
				}, "json");
				return false;
			})
			$("a").click(function(event){
				id_name = $(this).attr("id");
				if(id_name[0]=='v')
				{
					// video_code = id_name.slice(1);
					var st_index_start = id_name.indexOf("+");
					var st_index_end = id_name.indexOf("_");
					var start_time = id_name.substring(st_index_start+1,st_index_end);
					var last_index = id_name.length
					var video_code = id_name.substring(st_index_end+1,last_index)
					$("#video").html("<iframe id='ytplayer' type='text/html' width='640' height='390' src=http://www.youtube.com/embed/"+video_code+"?autoplay=1&start="+start_time+"></iframe>");
					return false;
				}
			})
		})
		
		$(document).on('click',"a",function(event){
			id_name = $(this).attr("id");
				if(id_name[0]=='v')
				{
					// video_code = id_name.slice(1);
					var st_index_start = id_name.indexOf("+");
					var st_index_end = id_name.indexOf("_");
					var start_time = id_name.substring(st_index_start+1,st_index_end);
					var last_index = id_name.length
					var video_code = id_name.substring(st_index_end+1,last_index)
					$("#video").html("<iframe id='ytplayer' type='text/html' width='640' height='390' src=http://www.youtube.com/embed/"+video_code+"?autoplay=1&start="+start_time+"></iframe>");
					return false;
				}
		});
	</script>
</head>
<body>
		<div id='nav'>
		<h1>Jot</h1>
		<a href="/homes/index">Home</a>
		<a href="/collections/all">Collections</a>
	</div>
	
<div id='top_container'>
	<div id='vid_notes_tool'>
		<div id='video_container'>
			<h2><%=@collection.name %></h2>
			<div id='video'>
				<iframe id="ytplayer" type="text/html" width="640" height="390" src="http://www.youtube.com/embed/<%=@collection.url%>?autoplay=1"></iframe>
			</div>
		</div>

	<div id='notes_flow'>
		<% @existing_notes.each do |note|%>
			<div class='note'>
				<a href="/notes/retrieve/<%=note.id%>">Note View</a>
				<p class='note_time'><%=note.time_stamp_h %> H <%=note.time_stamp_m %> M <%=note.time_stamp_s%> S </p>
				<a class='note_content' href='' id="v+<%=note.start_time%>_<%=note.url %>"><%=note.notes %></a>
			</div>
		<% end%>	
	</div>
</div>

</body>
</html>