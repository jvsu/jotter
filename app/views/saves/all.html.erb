<html>
<head>
	<title></title>
	<style type="text/css">
		.notes{
			overflow-x: scroll;
    		overflow-y: hidden;
   		 	white-space: nowrap;
   		 	margin-left:10px;
		}

		.jot{
			height:300px;
			width:310px;
			border:1px solid #F8F8F8;
			display:inline-block;
			vertical-align: top;
			margin:5px;
			overflow-y:scroll;
			overflow-x:hidden;
			white-space:normal;
		}	
		.note_content{
			padding:5px;
			margin:5px;
		}

		.collection_vid{
			display: block;
			margin-left:auto;
			margin-right:auto;
		}
		#back{
			float:right;
			margin-right:100px;
		}
		.title{
			display:inline-block;
			width:500px;
			margin-left:25px;
	
		}
		.upper_options h4{
			display:inline-block;
		}
		.delete{
			width:100px;
			display:inline-block;
			vertical-align: top;
			margin-top:12px;
		}
		h1{
			margin-bottom:30px;
			margin-right: auto;
			margin-left:auto;
			width:300px;
		}
		.time{
			padding:5px;
			margin:5px;
		}
		/*#video_section{
			height:400px;	
			border-bottom:1px solid #F8F8F8;		
		}*/
		#all_collections{
			height:900px;
			overflow-y:scroll;
			overflow-x:hidden;
			margin-bottom:50px;
		}
		.jot_info a, .jot_info p{
			display:inline-block;
		}
		.collection{
			padding:5px;

		}
		#ytplayer{
			display:block;
			margin-left:auto;
			margin-right:auto;
		}
		#video{	
			display:block;
			margin-left:auto;
			margin-right:auto;
			/*width:650px;
			height:395px;*/
			/*border:1px solid #F8F8F8;*/
		}
		#collection_type{
			display:block;
			margin-left: auto;
			margin-right:auto;
			width:27em;
		}
		#collection_type a, #collection_type p{
			margin:10px;
			display:inline-block;
			font-size:17px;
		}
		#collection_type p{
			font-weight: bold;
			text-decoration: underline;
		}
		.pbutton{
			width:100px;
			display:inline-block;
			vertical-align: bottom;	
			padding:0px;
			margin-bottom:0px;
		}
		.tag_input{
			width:300px;
		}
		.pub_info{
			margin-top:20px;
			margin-left: 500px;
			margin-bottom:20px;
		}
	</style>
	<script type="text/javascript">
		$(document).ready(function(){

			$(".pub_info").hide();

			$("button").click(function(event){
				id_name = $(this).attr("id");
				if(id_name[0]=='v')
				{
					// video_code = id_name.slice(1);
					var st_index_start = id_name.indexOf("+");
					var st_index_end = id_name.indexOf("_");
					var start_time = id_name.substring(st_index_start+1,st_index_end);
					var last_index = id_name.length
					var video_code = id_name.substring(st_index_end+1,last_index)
					$("#video").html("<iframe id='ytplayer' type='text/html' width='640' height='390' src=http://www.youtube.com/embed/"+video_code+"?autoplay=1&start="+start_time+"></iframe>");
					return false;
				}

				if(id_name[0]=='b')
				{
					var pub_index_start = id_name.indexOf("_");
					var pub_index_end = id_name.indexOf("+");
					var id = id_name.substring(pub_index_start+1, pub_index_end);
					var open_div = "pub"+id
					$("#"+open_div).toggle();
					return false;
				}
			})
		$('form').submit(function(){
			$.post($(this).attr('action'),$(this).serialize(),function(data){
				// Hide the form div
					$("#pub"+data.collection_id).hide();
				// Change the button
				$("#pbutton"+data.collection_id).html("<a href='/tags/unshare/"+data.collection_id+"'>UnPublish</a>");
			},"json");
			return false;
		})
	})
		
	</script>
</head>
<body>
	<h1>All Collections</h1>
	<a href="/homes/index" id='back'>Home</a>
	<div id='collection_type'>
		<a href='/collections/all'>Your Collections</a>
		<p >Subscribed Collections</p>
	</div>
	<div id='video_section'>
		<div id='video'></div>

	</div>
	<%if flash[:message] %>
		<p><%=flash[:message] %></p>
	<% end%>
	<div id='all_collections'>
		<%@collections.each do |collection| %>
			<div class='collection'>
				<div class='upper_options' id="uo_<%=collection.id %>">
					<h4><a href="/saves/show/<%=collection.id %>" class='title'><%= collection.name%></a></h4>
					<a href="/saves/destroy/<%=collection.id %>/<%=@user.id %>" class='delete'>Delete</a>
				</div>
				<div id="pub<%=collection.id %>" class='pub_info'>
					<form action='/tags/share' method='post'>
						<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
						<input type='text' name='tag[tag_name]' placeholder='Enter Tags: #hello #nike' class='tag_input'>
						<input type='hidden' name='tag[collection_id]' value=<%= collection.id%>>
						<input type='submit' value='Publish'>
					</form>
				</div>
				<div class='notes'>
					<% @notes.each do |note|%>
						<%if note.collection_id == collection.id %>
							<div class='jot'>
								<div class='jot_info'>
									<p class='time'>Time: <%=note.time_stamp_h%>H <%=note.time_stamp_m%> M <%= note.time_stamp_s%> S</p>
									<button id='v+<%=note.start_time%>_<%=note.url %>' class='btn btn-link'>Play</button>
								</div>
								<p class='note_content'><%=note.notes %></p>
							</div>	

						<% end%>
					<%end %>
				</div>
			</div>

		<%end %>

	</div>
</body>
</html>